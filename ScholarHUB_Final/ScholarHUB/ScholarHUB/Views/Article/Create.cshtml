@model ScholarHUB.Models.Article

@{
    ViewData["Title"] = "Add Article";
}
<div class="wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Add Article</h2>

                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Title:</label>
                        <input type="text" id="title" name="title" class="form-control" required />
                    </div>

                    <div class="form-group mt-3 mb-3">
                        <label for="docxFile" class="form-label">Upload Document File (.docx):</label>
                        <input type="file" id="docxFile" name="docxFile" class="form-control" required />
                        <span asp-validation-for="FilePath" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3 mb-3">
                        <label for="imageFile" class="form-label">Upload Background Image:</label>
                        <input type="file" id="imageFile" name="imageFile" class="form-control" required />
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check mt-3 mb-3">
                        <input type="checkbox" class="form-check-input" id="terms" required>
                        <label class="form-check-label" for="terms">By submitting, Student must agree to the Terms and Conditions of Scholar Hub</label>
                    </div>

                    <input type="hidden" name="authorId" value="@ViewBag.AuthorId" />
                    <input type="hidden" name="facultyName" value="@ViewBag.FacultyName" />

                    <div class="d-flex justify-content-center mt-3 mb-3 button-gap">
                        <button type="submit" class="btn btn-outline-primary rounded-0" id="submitBtn" disabled>Add</button>
                        <div>
                            <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary rounded-0">Back To User Page</a>
                        </div>
                    </div>
                </form>

                <script>
                    document.getElementById("terms").addEventListener("change", function () {
                        document.getElementById("submitBtn").disabled = !this.checked;
                    });
                </script>
                <style>
                    body {
                        font-family: 'Montserrat', sans-serif;
                        background: #535c68;
                    }

                    .button-gap > .btn {
                        margin-right: 1rem;
                    }

                    * {
                        box-sizing: border-box;
                        -moz-box-sizing: border-box;
                        -webkit-box-sizing: border-box;
                    }

                    .wrapper {
                        margin: auto;
                        max-width: 900px;
                        padding-top: 90px;
                    }

                    .container {
                        background-color: #f9f9f9;
                        border-radius: 10px;
                    }

                    h2 {
                        color: #130f40;
                        font-family: 'Varela Round', sans-serif;
                        letter-spacing: -.5px;
                        font-weight: 700;
                        padding-bottom: 10px;
                        padding-top: 20px;
                    }

                    label {
                        color: #130f40;
                        font-weight: 600;
                        font-size: 1.1em;
                        letter-spacing: -1px;
                        opacity: 0.65;
                    }
                </style>
            </div>
        </div>
    </div>
</div>