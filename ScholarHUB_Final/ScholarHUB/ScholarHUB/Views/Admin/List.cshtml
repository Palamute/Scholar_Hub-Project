@model List<ScholarHUB.Models.UserProfile>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewData["Title"] = "List of Users";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>Users List</h1>
            <p>
                <a class="btn btn-primary" asp-action="Create">Create New</a>
            </p>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                First Name
                            </th>
                            <th>
                                Last Name
                            </th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Faculty</th>
                            <th>Function</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => user.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => user.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => user.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => user.RoleName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => user.FacultyName)
                                </td>
                                <td>
                                    @if(User.IsInRole("Admin") && user.Email != User.Identity.Name)
                                    {
                                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@user.Id">Details</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@user.Id">Delete</a>   
                                    }
                                    else
                                    {
                                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@user.Id">Details</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <p>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-dark text-white">Admin Dashboard</a>
            </p>

        </div>
    </div>
</div>


