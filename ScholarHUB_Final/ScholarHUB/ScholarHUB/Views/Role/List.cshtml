@model List<ScholarHUB.Models.Role>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewData["Title"] = "List of Roles";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1>Roles List</h1>
            <p>
                <a class="btn btn-primary" asp-action="Create">Create New</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                Role Name
                            </th>
                            <th>Function</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => role.Name)
                                </td>
                                <td>
                                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@role.Id">Details</a>
                                    <a class="btn btn-danger" asp-action="Delete"   asp-route-id="@role.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <p>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-dark text-white">Admin Dashboard</a>    
            </p>
        </div>
    </div>
</div>

