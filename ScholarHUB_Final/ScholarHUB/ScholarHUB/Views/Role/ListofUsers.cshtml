@model List<(string Email, string Role)>
@{
    ViewData["Title"] = "List of Users";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>User's Role</h1>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Function</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td>
                                    @if (User.IsInRole("Admin") && user.Email != User.Identity.Name)
                                    {
                                        <a class="btn btn-secondary" asp-action="EditRole" asp-route-email="@user.Email">Edit Role</a>
                                    }
                                    else
                                    {
                                        <p></p>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <p>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-dark text-white">Admin Dashboard</a>
            </p>
        </div>
    </div>
</div>
