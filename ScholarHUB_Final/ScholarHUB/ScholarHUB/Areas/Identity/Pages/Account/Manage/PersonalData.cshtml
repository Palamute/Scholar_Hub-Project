@page
@using ScholarHub.Areas.Identity.Pages.Account.Manage
@model PersonalDataModel
@{
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
    Layout = "/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
    ViewData["Title"] = "Personal Data";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="mt-3">
                <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
                <p>
                    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                </p>
                <form id="download-data" asp-page="DownloadPersonalData" method="post">
                    <button class="w-100 btn btn-primary mb-3" type="submit">Download</button>
                </form>
                <p>
                    <a id="delete" asp-page="DeletePersonalData" class="w-100 btn btn-danger">Delete</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
