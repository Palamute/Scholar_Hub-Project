@page
@using ScholarHub.Areas.Identity.Pages.Account.Manage
@model IndexModel
@using Microsoft.AspNetCore.Identity
@using ScholarHUB.Models

@{
    ViewData["ActivePage"] = ManageNavPages.Index;
    ViewData["Title"] = "User Profile";
    Layout = "/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <partial name="_StatusMessage" for="StatusMessage1" />
                <div class="form-floating mb-3 mt-3">
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <div class="form-floating mb-3 mt-3">
                    <input asp-for="Input.FacultyName" class="form-control" placeholder="Please enter your first name." disabled />
                    <label asp-for="Input.FacultyName" class="form-label"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" required="" placeholder="Please enter your phone number." />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <!-- First Name -->
                <div class="form-floating mb-3 mt-3">
                    <input asp-for="Input.FirstName" class="form-control" required="" placeholder="Please enter your first name." />
                    <label asp-for="Input.FirstName" class="form-label"></label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <!-- Last Name -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control" required="" placeholder="Please enter your last name." />
                    <label asp-for="Input.LastName" class="form-label"></label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

